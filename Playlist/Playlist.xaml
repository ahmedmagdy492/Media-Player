<UserControl x:Class="Playlist.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Playlist"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="120">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Name="PlayList" Background="Beige" >
            <StackPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add" Click="MenuItem_Click" />
                    <Separator />
                    <MenuItem Header="Clear" Click="MenuItem_Click_1" />
                </ContextMenu>
            </StackPanel.ContextMenu>
        </StackPanel>
    </ScrollViewer>
</UserControl>
